<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!---->
    <!--fonts type-->
    <style name="TextRegular" parent="@android:style/TextAppearance">
    </style>

    <style name="TextBold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextItalic" parent="@android:style/TextAppearance">
        <item name="android:textStyle">italic</item>
    </style>

    <!---->
    <!--colors for each fonts-->
    <!--regular-->
    <style name="TextRegular.MainAppText">
        <item name="android:textColor">?attr/colorMainAppText</item>
    </style>

    <style name="TextRegular.MainAppBackground">
        <item name="android:textColor">?attr/colorMainAppBackground</item>
    </style>


    <!--bold-->
    <style name="TextBold.MainApp">
        <item name="android:textColor">?attr/colorMainApp</item>
    </style>

    <style name="TextBold.MainAppMiddle">
        <item name="android:textColor">?attr/colorMainAppMiddle</item>
    </style>

    <style name="TextBold.MainAppText">
        <item name="android:textColor">?attr/colorMainAppText</item>
    </style>

    <style name="TextBold.DecryptedColor">
        <item name="android:textColor">?attr/colorDecrypted</item>
    </style>

    <style name="TextBold.EncryptedColor">
        <item name="android:textColor">?attr/colorEncrypted</item>
    </style>

    <!---->
    <!--size for each color-->
    <!--bold sizes-->
    <style name="TextBold.MainApp.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextBold.MainApp.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold.MainAppText.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBold.MainAppMiddle.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold.DecryptedColor.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold.EncryptedColor.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextRegular.MainAppBackground.12">
        <item name="android:textSize">12sp</item>
    </style>
</resources>